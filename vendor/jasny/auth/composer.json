{
    "name": "jasny/auth",
    "description": "Authentication and authorization",
    "keywords": ["auth"],
    "license": "MIT",
    "homepage": "http://jasny.github.com/auth",
    "authors": [
        {
            "name": "Arnold Daniels",
            "email": "arnold@jasny.net",
            "homepage": "http://www.jasny.net"
        }
    ],
    "support": {
        "issues": "https://github.com/jasny/auth/issues",
        "source": "https://github.com/jasny/auth"
    },
    "require": {
        "php": ">=5.6.0",
        "psr/http-message": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Jasny\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/support"]
    },
    "require-dev": {
        "jasny/php-code-quality": "^2.1.2",
        "hashids/hashids": "~2.0.0"
    },
    "suggest": {
        "hashids/hashids": "For generating confirmation tokens"
    }
}
